<odoo>
    <data>
        <record id="current_address" model="ir.ui.view">
            <field name="name">Employee current address</field>
            <field name="model">current.address</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name" invisible="1"/>
                            <field name="current_state_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="current_district_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="current_ward_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="current_address"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>